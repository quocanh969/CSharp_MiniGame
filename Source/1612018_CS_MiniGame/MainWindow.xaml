<Window x:Class="_1612018_CS_MiniGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1612018_CS_MiniGame"
        mc:Ignorable="d"
        Title="1612018_MiniGame" Height="500" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ToolTip="1612018_MiniGame">
    <Window.Background>
        <ImageBrush ImageSource="source/StartBackground.png"/>
    </Window.Background>
    <Grid>
        <Button x:Name="startButton" Content="START" HorizontalAlignment="Left" Margin="522,82,0,0" VerticalAlignment="Top" Width="186" Height="114" FontFamily="Times New Roman" FontSize="36" Cursor="Hand" Click="clickStart"/>
        <Button x:Name="exitButton" Content="EXIT" HorizontalAlignment="Left" Margin="522,240,0,0" VerticalAlignment="Top" Width="186" Height="114" FontFamily="Times New Roman" FontSize="36" Cursor="Hand" Click="clickExit"/>

    </Grid>
</Window>
